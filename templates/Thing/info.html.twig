{% extends('base.html.twig') %}
{% block title %}
    List of Actions
{% endblock %}
{% block body %}
    <h1>Thing</h1>
    {#TODO: meter validacion de usuario logado#}
    {#{% include 'fbSdk.html.twig' %}#}
    <h1>List of Action for Thing {{ thing.root }}</h1>
    {% for action in thing.getActions() %}
        <p>
            HTTP: {{ action.getHttpVerb() }} | ROUTE: {{ action.getRoute() }} |
            Desciption: {{ action.getDescription() }}
            <button onclick="openFriendDialog({{ action.getId }})">Share with friend</button>
        </p>
    {% endfor %}

    <div id="dialog" title="Basic dialog">
        <ul>
            {% for friend in friends %}
                <li>{{ friend.name }}</li>
            {% endfor %}
        </ul>

        <p>This is the default dialog which is useful for displaying information. The dialog window can be moved,
            resized
            and closed with the 'x' icon.</p>
    </div>

    <script>
        $(function () {
            $("#dialog").dialog();
        });
        function openFriendDialog(id){
            console.log("clicked this action id "+id);
        }
    </script>

{% endblock %}
